{
    "require": {
        "laravel/framework": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "mockery/mockery": "^1.4.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": [
            "@composer install",
            "@migrate",
            "@serve"
        ],
        "test": "phpunit tests/ --colors --testdox --",
        "testng": "phpunit tests/ --colors=always --testdox | grep -v âœ” --",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S 0.0.0.0:8000 -t public"
        ],
        "migrate": "@php artisan migrate --seed",
        "route:cache": "@php artisan route:cache",
        "route:clear": "@php artisan route:clear",
        "config:cache": "@php artisan config:cache",
        "config:clear": "@php artisan config:clear",
        "post-install-cmd": [
            "mkdir -p bootstrap/cache logs"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false,
        "preferred-install": "dist",
        "sort-packages": true
    }
}